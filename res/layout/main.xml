<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TraxActivity" >

    <!-- should equal 80px the size of the images -->

        <GridView
            android:id="@+id/boardplace"
            android:layout_width="740px"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:columnWidth="80px"
            android:gravity="left"
            android:horizontalSpacing="1.5dp"
            android:numColumns="9"
            android:stretchMode="none"
            android:verticalSpacing="1.5dp" 
            />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Spinner
            android:id="@+id/column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/letters"
            android:prompt="@string/col_prompt" />

        <Spinner
            android:id="@+id/row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/column"
            android:entries="@array/numbers"
            android:prompt="@string/row_prompt" />

        <Spinner
            android:id="@+id/block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/row"
            android:entries="@array/block"
            android:prompt="@string/block_prompt" />

        <Button
            android:id="@+id/execute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/block"
            android:text="@string/move" />
    </RelativeLayout>

</RelativeLayout>